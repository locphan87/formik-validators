{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude":[
    "dist",
    "node_modules"
  ]
}
